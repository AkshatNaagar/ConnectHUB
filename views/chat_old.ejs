<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .chat-container {
            height: calc(100vh - 120px);
            max-height: 700px;
        }
        .conversations-sidebar {
            height: 100%;
            overflow-y: auto;
            border-right: 1px solid #dee2e6;
        }
        .conversation-item {
            cursor: pointer;
            transition: background-color 0.2s;
            border-bottom: 1px solid #f0f0f0;
        }
        .conversation-item:hover {
            background-color: #f8f9fa;
        }
        .conversation-item.active {
            background-color: #e3f2fd;
        }
        .avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 18px;
        }
        .message-container {
            height: calc(100% - 140px);
            overflow-y: auto;
            padding: 20px;
            background: #f8f9fa;
        }
        .message-bubble {
            max-width: 70%;
            padding: 10px 15px;
            border-radius: 18px;
            margin-bottom: 10px;
            word-wrap: break-word;
        }
        .message-sent {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            margin-left: auto;
        }
        .message-received {
            background: white;
            color: #333;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }
        .message-time {
            font-size: 11px;
            opacity: 0.7;
            margin-top: 4px;
        }
        .chat-input-container {
            padding: 15px;
            background: white;
            border-top: 1px solid #dee2e6;
        }
        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            color: #999;
        }
        .unread-badge {
            background: #dc3545;
            color: white;
            border-radius: 10px;
            padding: 2px 8px;
            font-size: 11px;
            font-weight: bold;
        }
        .online-indicator {
            width: 10px;
            height: 10px;
            background: #28a745;
            border-radius: 50%;
            border: 2px solid white;
            position: absolute;
            bottom: 2px;
            right: 2px;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-md-12">
                <div class="card chat-container">
                    <div class="row g-0 h-100">
                        <!-- Conversations Sidebar -->
                        <div class="col-md-4 conversations-sidebar">
                            <div class="p-3 border-bottom">
                                <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Messages</h5>
                            </div>
                            <div class="p-2">
                                <input type="text" class="form-control" id="searchConversations" 
                                       placeholder="Search conversations...">
                            </div>
                            <div id="conversationList">
                                <!-- Conversations loaded dynamically -->
                            </div>
                        </div>
                        
                        <!-- Chat Area -->
                        <div class="col-md-8 d-flex flex-column">
                            <!-- Chat Header -->
                            <div class="p-3 border-bottom bg-white" id="chatHeader">
                                <div class="d-flex align-items-center" id="chatHeaderContent">
                                    <div class="empty-state w-100">
                                        <i class="bi bi-chat-text display-1"></i>
                                        <p class="mt-3">Select a conversation to start messaging</p>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Messages Container -->
                            <div class="message-container flex-grow-1" id="messageContainer">
                                <!-- Messages loaded dynamically -->
                            </div>
                            
                            <!-- Message Input -->
                            <div class="chat-input-container" id="chatInputContainer" style="display: none;">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="messageInput" 
                                           placeholder="Type a message..." disabled>
                                    <button class="btn btn-primary" id="sendBtn" disabled>
                                        <i class="bi bi-send"></i> Send
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const currentUserId = '<%= user._id %>';
        let currentReceiverId = null;
        let currentReceiverName = '';
        let allConversations = [];
        let messagePollingInterval = null;
        
        // Load connections as potential conversations
        async function loadConnections() {
            try {
                console.log('[CHAT] Loading connections...');
                const response = await fetch('/api/users/connections', {
                    credentials: 'include'
                });
                
                console.log('[CHAT] Response status:', response.status);
                const data = await response.json();
                console.log('[CHAT] Response data:', data);
                
                if (response.ok && data.success) {
                    console.log('[CHAT] Connections loaded:', data.data.connections.length);
                    displayConversations(data.data.connections);
                    allConversations = data.data.connections;
                } else {
                    console.error('[CHAT] API error:', data);
                    const container = document.getElementById('conversationList');
                    container.innerHTML = `
                        <div class="text-center p-4 text-danger">
                            <i class="bi bi-exclamation-triangle display-4"></i>
                            <p class="mt-3">Error loading connections.<br>Please refresh the page.</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('[CHAT] Error loading connections:', error);
                const container = document.getElementById('conversationList');
                container.innerHTML = `
                    <div class="text-center p-4 text-danger">
                        <i class="bi bi-exclamation-triangle display-4"></i>
                        <p class="mt-3">Error loading connections.<br>Please refresh the page.</p>
                    </div>
                `;
            }
        }
        
        function displayConversations(connections) {
            const container = document.getElementById('conversationList');
            
            if (connections.length === 0) {
                container.innerHTML = `
                    <div class="text-center p-4 text-muted">
                        <i class="bi bi-people display-4"></i>
                        <p class="mt-3">No connections yet.<br>Connect with people to start messaging!</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = connections.map(conn => {
                const initial = conn.name.charAt(0).toUpperCase();
                const headline = conn.headline || 'ConnectHub User';
                
                return `
                    <div class="conversation-item p-3" data-user-id="${conn._id}" data-user-name="${escapeHtml(conn.name)}">
                        <div class="d-flex align-items-center">
                            <div class="position-relative">
                                <div class="avatar">${initial}</div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="mb-0">${escapeHtml(conn.name)}</h6>
                                </div>
                                <p class="text-muted mb-0 small">${escapeHtml(headline)}</p>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Select conversation
        document.addEventListener('click', function(e) {
            const conversationItem = e.target.closest('.conversation-item');
            if (conversationItem) {
                // Remove active class from all
                document.querySelectorAll('.conversation-item').forEach(item => {
                    item.classList.remove('active');
                });
                
                // Add active class to selected
                conversationItem.classList.add('active');
                
                currentReceiverId = conversationItem.getAttribute('data-user-id');
                currentReceiverName = conversationItem.getAttribute('data-user-name');
                
                openConversation(currentReceiverId, currentReceiverName);
            }
        });
        
        async function openConversation(userId, userName) {
            // Update header
            const initial = userName.charAt(0).toUpperCase();
            document.getElementById('chatHeaderContent').innerHTML = `
                <div class="position-relative">
                    <div class="avatar">${initial}</div>
                    <div class="online-indicator"></div>
                </div>
                <div class="ms-3">
                    <h6 class="mb-0">${escapeHtml(userName)}</h6>
                    <small class="text-success"><i class="bi bi-circle-fill" style="font-size: 8px;"></i> Online</small>
                </div>
            `;
            
            // Show input area
            document.getElementById('chatInputContainer').style.display = 'block';
            document.getElementById('messageInput').disabled = false;
            document.getElementById('sendBtn').disabled = false;
            
            // Load messages
            await loadMessages(userId);
            
            // Start polling for new messages
            if (messagePollingInterval) {
                clearInterval(messagePollingInterval);
            }
            messagePollingInterval = setInterval(() => loadMessages(userId, true), 3000);
        }
        
        async function loadMessages(userId, silent = false) {
            try {
                const response = await fetch(`/api/messages/${userId}`, {
                    credentials: 'include'
                });
                const data = await response.json();
                
                if (data.success) {
                    displayMessages(data.data.messages.reverse(), silent);
                }
            } catch (error) {
                console.error('Error loading messages:', error);
            }
        }
        
        function displayMessages(messages, silent = false) {
            const container = document.getElementById('messageContainer');
            const wasScrolledToBottom = container.scrollHeight - container.scrollTop === container.clientHeight;
            
            if (!silent || messages.length === 0) {
                container.innerHTML = '';
            }
            
            if (messages.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="bi bi-chat-quote display-4"></i>
                        <p class="mt-3">No messages yet. Start the conversation!</p>
                    </div>
                `;
                return;
            }
            
            const existingMessages = Array.from(container.querySelectorAll('.message-bubble')).map(el => el.getAttribute('data-message-id'));
            
            messages.forEach(msg => {
                if (!existingMessages.includes(msg._id)) {
                    const isMe = msg.sender._id === currentUserId || msg.sender === currentUserId;
                    const time = new Date(msg.createdAt).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
                    
                    const messageDiv = document.createElement('div');
                    messageDiv.className = `d-flex ${isMe ? 'justify-content-end' : 'justify-content-start'}`;
                    messageDiv.innerHTML = `
                        <div class="message-bubble ${isMe ? 'message-sent' : 'message-received'}" data-message-id="${msg._id}">
                            <div>${escapeHtml(msg.content)}</div>
                            <div class="message-time">${time}</div>
                        </div>
                    `;
                    container.appendChild(messageDiv);
                }
            });
            
            // Scroll to bottom if was at bottom or new message
            if (wasScrolledToBottom || !silent) {
                container.scrollTop = container.scrollHeight;
            }
        }
        
        // Send message
        async function sendMessage() {
            const content = document.getElementById('messageInput').value.trim();
            if (!content || !currentReceiverId) return;
            
            try {
                const response = await fetch('/api/messages', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({
                        receiverId: currentReceiverId,
                        content: content,
                        messageType: 'text'
                    })
                });
                
                const data = await response.json();
                if (data.success) {
                    document.getElementById('messageInput').value = '';
                    await loadMessages(currentReceiverId, true);
                }
            } catch (error) {
                console.error('Error sending message:', error);
            }
        }
        
        document.getElementById('sendBtn').addEventListener('click', sendMessage);
        document.getElementById('messageInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });
        
        // Search conversations
        document.getElementById('searchConversations').addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase();
            const filtered = allConversations.filter(conn => 
                conn.name.toLowerCase().includes(query) || 
                (conn.headline && conn.headline.toLowerCase().includes(query))
            );
            displayConversations(filtered);
        });
        
        // Initial load
        loadConnections();
        
        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (messagePollingInterval) {
                clearInterval(messagePollingInterval);
            }
        });
    </script>
</body>
</html>
