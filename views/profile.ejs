<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - ConnectHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <div id="profileContent">
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading profile...</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const currentUserId = '<%= user._id %>';
        const profileUserId = '<%= profileUserId %>';
        let profileData = null;
        let connectionStatus = 'none';
        
        // Load profile data
        async function loadProfile() {
            try {
                const response = await fetch(`/api/users/${profileUserId}`, {
                    credentials: 'include'
                });
                const data = await response.json();
                
                if (!data.success) {
                    showError('Failed to load profile');
                    return;
                }
                
                profileData = data.data.user;
                connectionStatus = data.data.connectionStatus || 'none';
                renderProfile(profileData);
            } catch (error) {
                console.error('Error loading profile:', error);
                showError('Error loading profile');
            }
        }
        
        function renderProfile(user) {
            const isOwnProfile = currentUserId === profileUserId;
            
            // Render connection button based on status
            let connectionButton = '';
            if (!isOwnProfile) {
                if (connectionStatus === 'connected') {
                    connectionButton = `
                        <button class="btn btn-outline-success" disabled>
                            <i class="bi bi-check-circle"></i> Connected
                        </button>
                    `;
                } else if (connectionStatus === 'pending') {
                    connectionButton = `
                        <button class="btn btn-secondary" disabled>
                            <i class="bi bi-clock"></i> Request Sent
                        </button>
                    `;
                } else if (connectionStatus === 'received') {
                    connectionButton = `
                        <button class="btn btn-success accept-connection-btn" data-user-id="${profileUserId}">
                            <i class="bi bi-check-circle"></i> Accept Request
                        </button>
                    `;
                } else {
                    connectionButton = `
                        <button class="btn btn-primary send-connection-btn" data-user-id="${profileUserId}">
                            <i class="bi bi-person-plus"></i> Connect
                        </button>
                    `;
                }
            }
            
            const content = `
                <div class="row">
                    <div class="col-md-8">
                        <!-- Profile Header -->
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex">
                                        <img src="${user.profilePicture || '/images/default-avatar.png'}" 
                                             class="rounded-circle me-3" width="100" height="100" 
                                             style="object-fit: cover;">
                                        <div>
                                            <h3>${escapeHtml(user.name)}</h3>
                                            <p class="text-muted">${escapeHtml(user.headline || 'Professional')}</p>
                                            <p><i class="bi bi-geo-alt"></i> ${escapeHtml(user.location || 'Location not set')}</p>
                                            ${user.email ? `<p class="small text-muted"><i class="bi bi-envelope"></i> ${escapeHtml(user.email)}</p>` : ''}
                                        </div>
                                    </div>
                                    ${connectionButton}
                                </div>
                            </div>
                        </div>
                        
                        <!-- About -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5>About</h5>
                            </div>
                            <div class="card-body">
                                <p>${escapeHtml(user.bio || 'No bio yet')}</p>
                            </div>
                        </div>
                        
                        <!-- Skills -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5>Skills</h5>
                            </div>
                            <div class="card-body">
                                ${user.skills && user.skills.length > 0 ? 
                                    user.skills.map(skill => `<span class="badge bg-primary me-2 mb-2">${escapeHtml(skill)}</span>`).join('') :
                                    '<p class="text-muted">No skills added yet</p>'
                                }
                            </div>
                        </div>
                        
                        <!-- Experience -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5>Experience</h5>
                            </div>
                            <div class="card-body">
                                ${user.experience && user.experience.length > 0 ? 
                                    user.experience.map(exp => `
                                        <div class="mb-3 pb-3 border-bottom">
                                            <h6>${escapeHtml(exp.title)}</h6>
                                            <p class="text-muted mb-1">${escapeHtml(exp.company)}${exp.location ? ' â€¢ ' + escapeHtml(exp.location) : ''}</p>
                                            <p class="text-muted small">
                                                ${new Date(exp.startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })} - 
                                                ${exp.current ? 'Present' : new Date(exp.endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
                                            </p>
                                            ${exp.description ? `<p class="small">${escapeHtml(exp.description)}</p>` : ''}
                                        </div>
                                    `).join('') :
                                    '<p class="text-muted">No experience added yet</p>'
                                }
                            </div>
                        </div>
                        
                        <!-- Education -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5>Education</h5>
                            </div>
                            <div class="card-body">
                                ${user.education && user.education.length > 0 ? 
                                    user.education.map(edu => `
                                        <div class="mb-3 pb-3 border-bottom">
                                            <h6>${escapeHtml(edu.school)}</h6>
                                            <p class="text-muted mb-1">${escapeHtml(edu.degree)}${edu.field ? ' in ' + escapeHtml(edu.field) : ''}</p>
                                            <p class="text-muted small">
                                                ${new Date(edu.startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })} - 
                                                ${edu.current ? 'Present' : new Date(edu.endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
                                            </p>
                                            ${edu.description ? `<p class="small">${escapeHtml(edu.description)}</p>` : ''}
                                        </div>
                                    `).join('') :
                                    '<p class="text-muted">No education added yet</p>'
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <!-- Connections -->
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Connections</h6>
                                <span class="badge bg-primary" id="connectionCount">${user.connections ? user.connections.length : 0}</span>
                            </div>
                            <div class="card-body" id="connectionsContainer">
                                <p class="text-center"><i class="bi bi-hourglass-split"></i> Loading...</p>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('profileContent').innerHTML = content;
            loadConnections();
        }
        
        function showError(message) {
            document.getElementById('profileContent').innerHTML = `
                <div class="alert alert-danger">
                    <h4><i class="bi bi-exclamation-triangle"></i> Error</h4>
                    <p>${message}</p>
                    <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
                </div>
            `;
        }
        
        async function sendConnectionRequest() {
            const btn = document.querySelector('.send-connection-btn');
            if (!btn) return;
            
            const originalContent = btn.innerHTML;
            const userId = btn.dataset.userId;
            
            try {
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Sending...';
                
                const response = await fetch('/api/users/connect', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    credentials: 'include',
                    body: JSON.stringify({ userId })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    btn.innerHTML = '<i class="bi bi-clock"></i> Request Sent';
                    btn.classList.remove('btn-primary');
                    btn.classList.add('btn-secondary');
                    connectionStatus = 'pending';
                    // Update connection count if viewing own profile
                    if (profileUserId === '<%= user._id %>') {
                        updateConnectionCount();
                    }
                } else {
                    // If request already sent, update the button to reflect that
                    if (response.status === 409 && data.message.includes('already sent')) {
                        btn.innerHTML = '<i class="bi bi-clock"></i> Request Sent';
                        btn.classList.remove('btn-primary');
                        btn.classList.add('btn-secondary');
                        connectionStatus = 'pending';
                    } else if (response.status === 409 && data.message.includes('already sent you')) {
                        alert(data.message);
                        // Reload profile to show correct button
                        loadProfile();
                    } else {
                        alert(data.message || 'Error sending connection request');
                        btn.disabled = false;
                        btn.innerHTML = originalContent;
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error sending connection request');
                btn.disabled = false;
                btn.innerHTML = originalContent;
            }
        }
        
        async function acceptConnectionRequest() {
            const btn = document.querySelector('.accept-connection-btn');
            if (!btn) return;
            
            const originalContent = btn.innerHTML;
            const userId = btn.dataset.userId;
            
            try {
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Accepting...';
                
                const response = await fetch(`/api/users/connections/${userId}/accept`, {
                    method: 'PUT',
                    credentials: 'include'
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    btn.innerHTML = '<i class="bi bi-check-circle"></i> Connected';
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-outline-success');
                    connectionStatus = 'connected';
                    
                    // Reload connections and update count
                    loadConnections();
                    updateConnectionCount();
                } else {
                    alert(data.message || 'Error accepting connection request');
                    btn.disabled = false;
                    btn.innerHTML = originalContent;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error accepting connection request');
                btn.disabled = false;
                btn.innerHTML = originalContent;
            }
        }
        
        // Event delegation for connection buttons
        document.addEventListener('click', function(e) {
            if (e.target.closest('.send-connection-btn')) {
                e.preventDefault();
                sendConnectionRequest();
            }
            
            if (e.target.closest('.accept-connection-btn')) {
                e.preventDefault();
                acceptConnectionRequest();
            }
        });
        
        // Load connections
        async function loadConnections() {
            try {
                const response = await fetch(`/api/users/${profileUserId}/connections`, {
                    credentials: 'include'
                });
                const data = await response.json();
                
                const container = document.getElementById('connectionsContainer');
                const countBadge = document.getElementById('connectionCount');
                
                // Update connection count
                if (countBadge && data.success) {
                    countBadge.textContent = data.data.connections.length;
                }
                
                if (!data.success || !data.data.connections || data.data.connections.length === 0) {
                    container.innerHTML = '<p class="text-muted text-center small">No connections yet</p>';
                    return;
                }
                
                container.innerHTML = '';
                data.data.connections.slice(0, 5).forEach(conn => {
                    const connDiv = document.createElement('div');
                    connDiv.className = 'd-flex align-items-center mb-3';
                    connDiv.innerHTML = `
                        <img src="${conn.profilePicture || '/images/default-avatar.png'}" 
                             class="rounded-circle me-2" width="40" height="40" 
                             style="object-fit: cover;">
                        <div class="flex-grow-1">
                            <a href="/profile/${conn._id}" class="text-decoration-none">
                                <h6 class="mb-0 small">${escapeHtml(conn.name)}</h6>
                            </a>
                            <p class="mb-0 text-muted" style="font-size: 0.75rem;">${escapeHtml(conn.headline || 'Professional')}</p>
                        </div>
                    `;
                    container.appendChild(connDiv);
                });
                
                if (data.data.connections.length > 5) {
                    const moreText = document.createElement('p');
                    moreText.className = 'text-center text-muted small mt-2 mb-0';
                    moreText.textContent = `+${data.data.connections.length - 5} more connections`;
                    container.appendChild(moreText);
                }
            } catch (error) {
                console.error('Error loading connections:', error);
                document.getElementById('connectionsContainer').innerHTML = 
                    '<p class="text-danger text-center small">Error loading connections</p>';
            }
        }
        
        // Update connection count function
        async function updateConnectionCount() {
            await loadConnections();
        }
        
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        // Load profile on page load
        loadProfile();
    </script>
</body>
</html>
