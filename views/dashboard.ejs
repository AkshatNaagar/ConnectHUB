<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <div class="card profile-card mb-3">
                    <div class="card-body text-center">
                        <img src="<%= user.profilePicture %>" class="rounded-circle mb-2" width="100" height="100" id="profileImage" style="object-fit: cover;">
                        <h5 class="mb-1"><%= user.name %></h5>
                        <p class="text-muted small mb-2" id="userHeadline"><%= user.headline || 'Add your headline' %></p>
                        <p class="text-muted small mb-2" id="userBio"><%= user.bio || 'Add your bio' %></p>
                        <button class="btn btn-sm btn-outline-primary edit-profile-btn" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </button>
                        <hr>
                        <div class="d-flex justify-content-around text-center">
                            <div>
                                <strong id="connectionCount"><%= user.connections ? user.connections.length : 0 %></strong>
                                <p class="small text-muted mb-0">Connections</p>
                            </div>
                            <div>
                                <strong id="postCount">0</strong>
                                <p class="small text-muted mb-0">Posts</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex mb-3">
                            <img src="<%= user.profilePicture %>" class="user-avatar me-2">
                            <input type="text" class="form-control rounded-pill" placeholder="Share your thoughts, achievements..." data-bs-toggle="modal" data-bs-target="#createPostModal" readonly style="cursor: pointer;">
                        </div>
                        <div class="d-flex justify-content-around">
                            <button class="btn btn-light flex-fill me-1" data-bs-toggle="modal" data-bs-target="#createPostModal">
                                <i class="bi bi-image text-primary"></i> Photo
                            </button>
                            <button class="btn btn-light flex-fill ms-1" data-bs-toggle="modal" data-bs-target="#createPostModal" onclick="setPostType('achievement')">
                                <i class="bi bi-trophy text-warning"></i> Achievement
                            </button>
                        </div>
                    </div>
                </div>
                
                <div id="postsContainer">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>
                </div>
                
                <div class="text-center mb-4">
                    <button class="btn btn-outline-primary" id="loadMoreBtn">Load More Posts</button>
                </div>
            </div>
            
            <div class="col-md-3">
                <!-- Pending Connection Requests -->
                <div class="card profile-card mb-3" id="pendingRequestsCard" style="display: none;">
                    <div class="card-header bg-white">
                        <h6 class="mb-0"><i class="bi bi-person-check"></i> Connection Requests</h6>
                    </div>
                    <div class="card-body p-2" id="pendingRequestsContainer">
                    </div>
                </div>
                
                <!-- Suggested Connections -->
                <div class="card profile-card">
                    <div class="card-header bg-white">
                        <h6 class="mb-0"><i class="bi bi-person-plus"></i> Suggested Connections</h6>
                    </div>
                    <div class="card-body p-2" id="suggestionsContainer">
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/modals') %>
<input type="hidden" name="userId" value="<%= user._id %>">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/dashboard.js"></script>
</body>
</html>
