<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Connections - ConnectHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .connection-card {
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }
        .connection-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .avatar-lg {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
        }
        .stats-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2><i class="bi bi-people-fill"></i> My Connections</h2>
                        <p class="text-muted">Manage your professional network</p>
                    </div>
                    <div>
                        <span class="badge stats-badge fs-5 px-4 py-2">
                            <span id="totalConnections">0</span> Connections
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filter -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" id="searchInput" placeholder="Search connections by name, headline, or skills...">
                </div>
            </div>
            <div class="col-md-4">
                <select class="form-select" id="sortBy">
                    <option value="name">Sort by Name</option>
                    <option value="recent">Recently Connected</option>
                </select>
            </div>
        </div>

        <!-- Connections Grid -->
        <div class="row" id="connectionsGrid">
            <div class="col-12 text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Loading your connections...</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let allConnections = [];

        async function loadConnections() {
            try {
                const response = await fetch('/api/users/connections', {
                    credentials: 'include'
                });
                const data = await response.json();
                
                if (data.success) {
                    allConnections = data.data.connections;
                    document.getElementById('totalConnections').textContent = allConnections.length;
                    displayConnections(allConnections);
                }
            } catch (error) {
                console.error('Error loading connections:', error);
                document.getElementById('connectionsGrid').innerHTML = `
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-exclamation-triangle text-danger display-1"></i>
                        <p class="mt-3 text-danger">Error loading connections</p>
                    </div>
                `;
            }
        }

        function displayConnections(connections) {
            const grid = document.getElementById('connectionsGrid');
            
            if (connections.length === 0) {
                grid.innerHTML = `
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-people display-1 text-muted"></i>
                        <p class="mt-3 text-muted">No connections yet. Start connecting with people!</p>
                        <a href="/search" class="btn btn-primary mt-3">Find People</a>
                    </div>
                `;
                return;
            }

            grid.innerHTML = connections.map(conn => `
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card connection-card h-100" onclick="window.location.href='/profile/${conn._id}'">
                        <div class="card-body text-center">
                            <img src="${conn.profilePicture || '/images/default-avatar.png'}" 
                                 class="avatar-lg mb-3" 
                                 onerror="this.src='/images/default-avatar.png'"
                                 alt="${escapeHtml(conn.name)}">
                            <h5 class="card-title mb-1">${escapeHtml(conn.name)}</h5>
                            <p class="text-muted small mb-2">${escapeHtml(conn.headline || 'Professional')}</p>
                            ${conn.location ? `<p class="text-muted small"><i class="bi bi-geo-alt"></i> ${escapeHtml(conn.location)}</p>` : ''}
                            ${conn.skills && conn.skills.length > 0 ? `
                                <div class="mt-3">
                                    ${conn.skills.slice(0, 3).map(skill => `<span class="badge bg-secondary me-1 mb-1">${escapeHtml(skill)}</span>`).join('')}
                                    ${conn.skills.length > 3 ? `<span class="badge bg-light text-dark">+${conn.skills.length - 3}</span>` : ''}
                                </div>
                            ` : ''}
                            <div class="d-flex gap-2 mt-3 justify-content-center">
                                <a href="/profile/${conn._id}" class="btn btn-outline-primary btn-sm" onclick="event.stopPropagation()">
                                    <i class="bi bi-person"></i> View Profile
                                </a>
                                <a href="/chat?user=${conn._id}" class="btn btn-primary btn-sm" onclick="event.stopPropagation()">
                                    <i class="bi bi-chat-dots"></i> Message
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase();
            const filtered = allConnections.filter(conn => 
                conn.name.toLowerCase().includes(query) ||
                (conn.headline && conn.headline.toLowerCase().includes(query)) ||
                (conn.skills && conn.skills.some(skill => skill.toLowerCase().includes(query)))
            );
            displayConnections(filtered);
        });

        // Sort functionality
        document.getElementById('sortBy').addEventListener('change', (e) => {
            const sortBy = e.target.value;
            let sorted = [...allConnections];
            
            if (sortBy === 'name') {
                sorted.sort((a, b) => a.name.localeCompare(b.name));
            } else if (sortBy === 'recent') {
                sorted.reverse();
            }
            
            displayConnections(sorted);
        });

        // Load on page load
        loadConnections();
    </script>
</body>
</html>
